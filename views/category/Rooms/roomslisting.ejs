<% layout("layouts/boilerplate") %>
<h3>Rooms</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let room of rooms){ %>
  <a href="/rooms/<%= room._id %>" class="listing-link">
    <div class="card col listing-card-3d listing-c">
      <img
        src="<%= room.image.url %>"
        class="card-img-top"
        alt="room_image"
        style="height: 20rem"
        
      />
      <div class="card-img-overlay"></div>
      <div class="card-title">
        <p class="card-title">
          <b>&nbsp;&nbsp;<%= room.title %></b> <br />
          <% if (room.price != null) { %>
            &nbsp;&nbsp;&#8377;<%= room.price.toLocaleString("en-IN") %>/night <br />
          <% } else { %>
            Price not available <br />
          <% } %>
          <br />
          &nbsp;&nbsp;<%= room.description %> <br />
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
