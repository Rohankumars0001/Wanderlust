<% layout("layouts/boilerplate") %>

<div class="row mt-3 mb-3 justify-content-center">
  <div class="col-10 text-center">
    <h2><b><%= House.title %></b></h2>
  </div>

  <!-- House Card -->
  <div class="card listing-c" style="width: 40rem">
    <div class="text-center">
      <img src="<%= House.image.url %>" class="card-img-top show-img" alt="House_image" />
    </div>
    <div class="card-body">
      <div class="card-text text-center">
        <p>Owned By: <i><%= House.owner.username %></i></p>
        <p>
          <%= House.description %><br />
          ₹<%= House.price.toLocaleString("en-IN") %><br />
          <%= House.location %>, <i><%= House.country %></i>
        </p>
      </div>
      <br>

      <% if (currUser && House.owner._id.toString() === currUser._id.toString()) { %>
      <div class="btns text-center">
        <a href="/houses/<%= House._id %>/edit">
          <button class="btn btn-outline-danger">Edit</button>
        </a>
        &nbsp;
        <form method="POST" action="/houses/<%= House._id %>?_method=DELETE" class="d-inline">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
      <% } %>
    </div>
  </div>

 <!-- Review Section -->
<div class="container mt-5">
  <% if (currUser) { %>
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <h4 class="text-center mb-4">Leave a Review</h4>
        <form
          method="post"
          novalidate
          class="needs-validation"
        >
          <!-- Rating -->
          <div class="mb-4 text-center">
            <label for="rating" class="form-label d-block mb-2">Rating</label>
            <fieldset class="starability-slot d-inline-block">
              <input
                type="radio"
                id="no-rate"
                class="input-no-rate"
                name="review[rating]"
                value="0"
                checked
                aria-label="No rating."
              />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <!-- Comment -->
          <div class="mb-4">
            <label for="comment" class="form-label">Comment</label>
            <textarea
              name="review[comment]"
              id="comment"
              rows="4"
              class="form-control"
              required
            ></textarea>
            <div class="valid-feedback">&#10003;</div>
            <div class="invalid-feedback">Field cannot be empty &#9888;</div>
          </div>

          <!-- Submit -->
          <div class="text-center">
            <button class="btn btn-outline-danger px-4">Submit</button>
          </div>
        </form>
      </div>
    </div>
  <% } %>
</div>
  <!-- All Reviews -->
  <div class="col-12 mt-4">
    <hr />
    <p class="text-center">All Reviews</p>
    <div class="row justify-content-center">
      <% for (let review of House.reviews) { %>
      <div class="col-lg-5 col-md-6 col-sm-10 mb-3">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %>★</p>
            <form action="/houses/<%= House._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
              <button class="btn btn-sm btn-outline">
                <i class="fa-solid fa-trash"></i>
              </button>
            </form>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
