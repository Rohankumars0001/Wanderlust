<% layout("layouts/boilerplate") %>
<h3 class="text-center my-4">Houses</h3>

<div class="container mb-5">
  <div class="row justify-content-center g-4">
    <% for(let house of houses){ %>
      <div class="col-lg-4 col-md-6 col-sm-10">
        <a href="/houses/<%= house._id %>" class="listing-link" style="text-decoration: none;">
          <div class="card listing-card-3d listing-c shadow-sm border-0">
            <img
              src="<%= house.image.url %>"
              class="card-img-top"
              alt="house_image"
              style="height: 14rem; object-fit: cover;"
              loading="lazy"
            />
            <div class="card-body">
              <h5 class="card-title mb-1"><%= house.title %></h5>
              <% if (house.price != null) { %>
                <p class="mb-1 text-muted">&#8377; <%= house.price.toLocaleString("en-IN") %>/night</p>
              <% } else { %>
                <p class="mb-1 text-muted">Price not available</p>
              <% } %>
              <p class="card-text small text-secondary"><%= house.description %></p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>
